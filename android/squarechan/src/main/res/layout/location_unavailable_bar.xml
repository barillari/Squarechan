<LinearLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"    
   android:visibility="gone"
   android:id="@+id/location_unavailable_bar"
   android:onClick="clickedSeekingLocationBar"
   android:layout_height="wrap_content"
   android:layout_width="fill_parent">

    <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#ff6262"
       android:textSize="24dip"
       android:textStyle="bold"
       android:text="@string/location_unavailable_text"
       android:padding="8dip"
       />
    <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#ff6262"
       android:textSize="16dip"
       android:text="@string/location_unavailable_explanation_text"
       android:padding="8dip"
       />
</LinearLayout>
